{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "es6",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "react",
    "outDir": "./build/",
    "tsBuildInfoFile": ".tsbuildinfo",
    "strict": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}