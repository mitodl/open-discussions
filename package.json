{
    "name": "open-discussions-root",
    "private": true,
    "workspaces": [
        "frontends/*"
    ],
    "scripts": {
        "build": "run foreach-with-fallback build global:build",
        "lint-check": "run foreach-with-fallback lint-check global:lint-check",
        "lint-fix": "run foreach-with-fallback lint-fix global:lint-fix",
        "fmt-check": "run foreach-with-fallback fmt-check global:fmt-check",
        "fmt-fix": "run foreach-with-fallback fmt-fix global:fmt-fix",
        "test": "run foreach-with-fallback test global:test",
        "scss-lint": "run foreach-with-fallback scss-lint global:scss-lint",
        "typecheck": "run foreach-with-fallback typecheck global:typecheck",
        "foreach-with-fallback": "yarn workspaces foreach --topological --verbose exec ${PROJECT_CWD}/scripts/yarn-run-with-fallback.sh $0 $1",
        "start-dev": "yarn workspaces foreach --verbose --parallel --interlaced exec ${PROJECT_CWD}/scripts/yarn-run-with-fallback.sh start-dev global:start-dev",
        "global:build": "cd $INIT_CWD && yarn global:clean && yarn global:compile && yarn global:build:flowtypes",
        "global:start-dev": "cd $INIT_CWD && yarn global:clean && yarn global:compile-watch",
        "global:clean": "cd $INIT_CWD && rimraf -rf build/ tsconfig.tsbuildinfo",
        "global:compile": "cd $INIT_CWD && tsc",
        "global:compile-watch": "cd $INIT_CWD && tsc --watch",
        "global:coverage": "cd $INIT_CWD && yarn test --coverage",
        "global:fmt-check": "cd $INIT_CWD && prettier --no-semi --check src/",
        "global:fmt-fix": "cd $INIT_CWD && prettier --no-semi --write src/",
        "global:lint-check": "cd $INIT_CWD && eslint src/ --ext .js,.jsx,.ts,.tsx",
        "global:scss-lint": "echo 'TODO: Set this up.'",
        "global:lint-fix": "cd $INIT_CWD && eslint --fix src/ --ext .js,.jsx,.ts,.tsx",
        "global:build:flowtypes": "./scripts/ts-to-flow.sh",
        "global:test": "cd $INIT_CWD && jest",
        "global:test:watch": "cd $INIT_CWD && jest --watch"
    },
    "version": "0.0.0",
    "packageManager": "yarn@3.2.0",
    "devDependencies": {
        "@swc/core": "^1.2.205",
        "@swc/jest": "^0.2.21",
        "@testing-library/react": "12",
        "@types/jest": "^28.1.3",
        "@types/styled-components": "^5.1.25",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.18.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-prettier-config": "^1.0.1",
        "flowgen": "^1.20.0",
        "jest": "^28.1.1",
        "jest-environment-jsdom": "^28.1.1",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^28.0.5",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.4"
    }
}
